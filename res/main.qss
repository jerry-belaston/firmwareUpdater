}

firmwareUpdater--ui--view--workspace--modeMulti--projectZone--DeviceWidget:hover {
	background-color: rgba(0, 0, 90, 200);
}

firmwareUpdater--ui--view--workspace--modeMulti--projectZone--DeviceWidget:selected {
	background-color: rgba(0, 0, 90, 100);
}

firmwareUpdater--ui--view--workspace--modeMulti--projectZone--DeviceWidget QLabel[objectName="DeviceWidget-DeviceUserNameLabel"] {
	background: rgb(0,0,70);
